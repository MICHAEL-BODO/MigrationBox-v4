# MigrationBox V4.1 Environment Variables
# Copy to .env and fill in your values

# Cloud Provider (aws, azure, gcp)
PROVIDER=aws
REGION=us-east-1

# Stage (local, dev, staging, production)
STAGE=local

# LocalStack (for local development)
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1

# Azure (for Azure discovery/provisioning)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_SUBSCRIPTION_ID=

# GCP (for GCP discovery/provisioning)
GCP_PROJECT_ID=
GCP_REGION=europe-west1
GOOGLE_APPLICATION_CREDENTIALS=

# AI/ML
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# MCP Browser Automation
MCP_AZURE_ENDPOINT=http://localhost:8080
MCP_AWS_ENDPOINT=http://localhost:8081
MCP_GCP_ENDPOINT=http://localhost:8082

# Authentication
AUTH_DOMAIN=auth.migrationbox.com
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=

# Temporal.io
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3000/api
